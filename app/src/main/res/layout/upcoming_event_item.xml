<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:card_view="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginTop="6dp"
	android:layout_marginBottom="6dp"
	android:id="@+id/upcoming_event_item_layout">
	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="4dp"
		card_view:cardCornerRadius="4dp">

		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_margin="12dp"
			android:orientation="vertical">

			<TextView android:id="@+id/upcomingEventName"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Event Name"
				android:textColor="#007bff"
				android:textSize="16sp"/>

			<TextView android:id="@+id/upcomingEventArtist"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="6dp"
				android:text="Artist"
				android:textColor="#ff8822"
				android:textSize="16sp"/>

			<TextView android:id="@+id/upcomingEventDate"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="6dp"
				android:text="Venue Name"
				android:textColor="#888"
				android:textSize="16sp"/>

			<TextView android:id="@+id/upcomingEventType"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="6dp"
				android:text="Type"
				android:textColor="#111"
				android:textSize="16sp"/>

		</LinearLayout>


	</android.support.v7.widget.CardView>
</RelativeLayout>