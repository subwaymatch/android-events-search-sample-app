<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".fragments.eventdetail.ArtistTeamPhotosFragment">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<LinearLayout
				android:id="@+id/artist1InfoWrapper"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<TextView
					android:id="@+id/artist1Name"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:textAlignment="center"
					android:text="Artist1"
					android:textSize="18dp"
					android:textStyle="bold" />

				<TableLayout
					android:id="@+id/artist1InfoTableLayout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:stretchColumns="1"
					android:layout_marginTop="20dp"
					android:layout_marginBottom="20dp">
				</TableLayout>

				<LinearLayout
					android:id="@+id/artist1PhotosWrapper"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:layout_marginBottom="60dp">
				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:id="@+id/artist2InfoWrapper"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

				<TextView
					android:id="@+id/artist2Name"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:textAlignment="center"
					android:text="Artist2"
					android:textSize="18dp"
					android:textStyle="bold" />

				<TableLayout
					android:id="@+id/artist2InfoTableLayout"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:stretchColumns="1"
					android:layout_marginTop="20dp"
					android:layout_marginBottom="20dp">
				</TableLayout>

				<LinearLayout
					android:id="@+id/artist2PhotosWrapper"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:layout_marginBottom="60dp">
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</FrameLayout>